<%- include('common/header') %>

    <div class="container text-center pt-5 mt-5">
        <div class="card py-5">
            <a href="" data-toggle="modal" data-target="#profile">
                <img src="/images/avatar.png" class="avatar" alt="">

            </a>
            <h3 class="py-2"><%= name %></h3>
            <div class="container w-50 m-auto">
                <form action="/handleMessage" method="post">
                    <% if (error) { %>
                        <div class="alert alert-danger">
                            <%= error %>
                        </div>
                        <% } %>
                            <input type="hidden" name="receiverId" value="<%= receiverId %>">
                            <textarea class="form-control" name="message" id="message" cols="10" rows="9"
                                placeholder="You cannot send a Sarahah to yourself, share your profile with your friends :)"></textarea>
                            <button class="btn btn-outline-info mt-3">
                                <i class="far fa-paper-plane mr-2"></i>
                                Send
                            </button>
                </form>
            </div>
        </div>
    </div>

    <%- include('common/footer') %>